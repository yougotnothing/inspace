{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*",
        "exclude": "src/main/**/*"
      },
      {
        "include": "main/templates/*.pug",
        "exclude": "dist/src"
      },
      {
        "include": "src/global.d.ts",
        "exclude": "dist/src"
      }
    ]
  }
}
