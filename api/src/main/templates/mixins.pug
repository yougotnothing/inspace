mixin styles()
  style.
      body {
        font-family: apple-system, BlinkMacSystemFont,
          'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell,
          'Open Sans', 'Helvetica Neue', sans-serif;
        background-color: black;
        display: inline-block;
      }

      .container {
        display: inline-block;
        gap: 1rem;
      }

      h1 {
        font-size: 2rem;
        font-weight: 600;
        color: white;
        margin: 0;
        padding: 0;
      }

      .link {
        font-size: 1.3rem;
        font-weight: 500;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 30px;
        background-color: white;
        color: black;
      }

      p {
        font-size: 1.3rem;
        font-weight: 500;
        color: white;
      }

      .header {
        padding: 1rem 0;
        width: 100%;
        display: inline-block;
        background-color: #3636361c;
        border-bottom: 1px solid #4747472f;
      }

      .header-link {
        font-size: 1.3rem;
        font-weight: 500;
        margin: 0 2rem;
        color: white;
        text-decoration: none;
      }

      .main-wrapper {
        padding: 3rem;
      }

      h3 {
        font-size: 1.4rem;
        font-weight: 600;
        color: #aaaaaa;
      }

      .footer {
        background-color: #3636361c;
        border-top: 1px solid #4747472f;
        display: block;
      }

      .footer-content {
        display: inline-block;
        gap: 1rem;
        margin: 1.5rem;
      }

      .content-wrapper {
        display: inline-block;
        gap: 1.5rem;
        margin: 1.5rem 0;
        width: 100%;
      }

      a {
        text-decoration: none;
        font-size: 1.3rem;
        font-weight: 500;
        color: #aaaaaa;
      }

      .footer-content a,
      .footer-content p {
        font-size: 1.1rem;
      }
