generator client {
  provider      = "prisma-client-js"
  log           = ["query", "info", "warn", "error"]
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  password                   String
  id                         String   @id @default(uuid()) @db.Uuid
  name                       String   @unique
  email                      String   @unique
  avatar                     String   @default("")
  isHaveAvatar               Boolean  @default(false)
  isVerified                 Boolean  @default(false)
  spottedLunarEclipses       Int      @default(0)
  spottedSolarEclipses       Int      @default(0)
  spottedMeteorShowers       Int      @default(0)
  spottedSupermoons          Int      @default(0)
  spottedMicromoons          Int      @default(0)
  spottedPlanetaryAlignments Int      @default(0)
  timezone                   String   @default("Europe/Warsaw")
  shownDistance              Distance @default(KM)
  role                       Role     @default(USER)
  createdAt                  DateTime
  toSpotted                  Event[]
}

model Event {
  description String
  id          String    @id @default(uuid()) @db.Uuid
  date        DateTime
  isSpotted   Boolean   @default(false)
  userId      String?   @db.Uuid
  type        EventType
  data        Json
  User        User?     @relation(fields: [userId], references: [id])
}

enum EventType {
  SOLAR_ECLIPSE
  LUNAR_ECLIPSE
  METEOR_SHOWER
  ASTEROID
  COMET
}

enum Role {
  ADMIN
  USER
}

enum Distance {
  AU
  KM
}
